
@{
    ViewBag.Title = "Chat";
}

<h2>Chat</h2>

<div class="container">
    <input type="text" id="message" />
    <input type="button" id="sendmessage" value="Send" />
    <input type="hidden" id="displayname" />

    <ul id="discussion">
    </ul>
</div>

@section scripts{
    <!--jQuery Library is required and is referenced in _Layout.cshtml-->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>

    <script>
        $(function () {
            //Reference the auto generated proxy for hub.
            var chat = $.connection.chatHub;

            // IMPORTANT: Creating client function that is called back from the hub that sits on the server side.
            chat.client.addNewMessageToPage = function (name, message) {
                $('#discussion').append('<li><strong>' + htmlEncode(name) + '<strong>: ' + htmlEncode(message) + '</li > ');
            };

            $('#displayname').val(prompt('Enter your name:', ''));
            $('#message').focus();

            //Starting the SignalR connection to ChatHub.
            $.connection.hub.start()
                .done(function () {
                    // Calling the Send method that sits on server(ChatHub).
                    $('#sendmessage').click(function () {
                        chat.server.send($('#displayname').val(), $('#message').val());

                        //Clear text and set focus for next message.
                        $('#message').val('').focus();
                    });
                })
                .fail(function () {
                    alert('Error!!');
                });
        });

        // HTML Encoding messages for display on page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}